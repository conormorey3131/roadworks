{
  "name": "roadworks-ire",
  "version": "1.0.0",
  "description": "Roadworks IRE - Premium Automotive Content from Ireland",
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css --watch",
    "optimize:images": "node scripts/optimize-images.js",
    "build": "npm run build:css && npm run optimize:images"
  },
  "devDependencies": {
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.1"
  }
}
